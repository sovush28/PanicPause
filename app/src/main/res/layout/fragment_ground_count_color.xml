<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroundCountColorFragment">

    <!-- Back button positioned at the top left -->
     <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow_icon"
        android:layout_gravity="start"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:id="@+id/back_btn"
        android:contentDescription="Back Button"
        />

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        >

        <!-- Button container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24dp"
            style="@style/normalTextDark"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/count_color_tv"
            />

            <!-- Another Color button -->
            <Button
                android:id="@+id/another_color_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:backgroundTint="@null"
                android:background="@drawable/outlined_btn_shape"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="20dp"
                android:text="@string/another_color"
                style="@style/normalTextGreen"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <!-- Next button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_shape"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:text="@string/next"
                android:textSize="20dp"
                android:textStyle="bold"
                style="@style/normalTextLight"
                android:gravity="center"
                android:id="@+id/next_btn"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>