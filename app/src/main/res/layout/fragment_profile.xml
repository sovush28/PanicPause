<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/normalTextGreen"
        android:textStyle="bold"
        android:text="@string/profile"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/profile_pic_default"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/normalTextDark"
        android:layout_marginTop="16dp"
        android:text="email"
        android:id="@+id/temp_user_email_tv"
        />
    
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/first_time_welcome_msg_shape"
        android:text="Добро пожаловать в PanicPause!\nДавайте настроим приложение под вас"
        android:id="@+id/first_time_welcome_msg_tv"
        android:visibility="visible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="28dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:text="@string/favorites"
            android:id="@+id/favorites_tv"
            />
        <View
            app:backgroundTint="@null"
            android:background="@drawable/divider_main_shape"
            style="@style/MainDivider"
            android:layout_marginVertical="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:textStyle="bold"
            android:text="@string/set_triggers"
            android:id="@+id/set_triggers_tv"
            />
        <View
            app:backgroundTint="@null"
            android:background="@drawable/divider_main_shape"
            style="@style/MainDivider"
            android:layout_marginVertical="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:text="@string/account_settings"
            android:id="@+id/acc_settings_tv"
            />
        <View
            app:backgroundTint="@null"
            android:background="@drawable/divider_main_shape"
            style="@style/MainDivider"
            android:layout_marginVertical="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:text="@string/app_info"
            android:id="@+id/app_info_tv"
            />

    </LinearLayout>

</LinearLayout>