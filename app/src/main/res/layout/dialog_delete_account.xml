<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#90000000"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/dialog_container">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_dark"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/dialog_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/delete_acc_warning_tv"
            style="@style/normalTextLight"
            android:textSize="18dp"
            android:text="@string/delete_acc_warning"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/action_cant_be_cancelled_tv"
            style="@style/normalTextLight"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/action_cant_be_cancelled"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:backgroundTint="@null"
            android:background="@drawable/light_btn_shape"
            android:text="@string/yes_delete_acc"
            style="@style/normalTextDark"
            android:textStyle="bold"
            android:id="@+id/yes_delete_btn"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:backgroundTint="@null"
            android:background="@drawable/et_light_border"
            android:text="@string/cancel"
            style="@style/normalTextLight"
            android:textStyle="bold"
            android:id="@+id/cancel_btn"
            />

    </LinearLayout>

</LinearLayout>