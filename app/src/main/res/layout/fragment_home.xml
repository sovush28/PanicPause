<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/normalTextGreen"
        android:textStyle="bold"
        android:text="@string/main"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/panic_btn"
        style="@style/normalTextLight"
        android:layout_width="270dp"
        android:layout_height="280dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/Im_panicking"
        android:textSize="32dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/panic_btn_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="28dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:textStyle="bold"
            android:text="@string/history"
            android:id="@+id/history_tv"
            />
        <View
            app:backgroundTint="@null"
            android:background="@drawable/divider_main_shape"
            style="@style/MainDivider"
            android:layout_marginVertical="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:textStyle="bold"
            android:text="@string/config_grounding"
            android:id="@+id/ground_settings_tv"
            />
        <View
            app:backgroundTint="@null"
            android:background="@drawable/divider_main_shape"
            style="@style/MainDivider"
            android:layout_marginVertical="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            style="@style/normalTextDark"
            android:textStyle="bold"
            android:text="@string/useful_info"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                style="@style/normalTextDark"
                android:text="@string/whats_pa"
                android:id="@+id/whats_pa_tv"
                />
            <View
                app:backgroundTint="@null"
                android:background="@drawable/divider_main_shape"
                android:backgroundTint="@color/colorLightGreen"
                style="@style/MainDivider"
                android:layout_marginVertical="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                style="@style/normalTextDark"
                android:text="@string/how_to_help_yourself"
                android:id="@+id/how_to_help_yourself_tv"
                />
            <View
                app:backgroundTint="@null"
                android:background="@drawable/divider_main_shape"
                android:backgroundTint="@color/colorLightGreen"
                style="@style/MainDivider"
                android:layout_marginVertical="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                style="@style/normalTextDark"
                android:text="@string/whats_trigger"
                android:id="@+id/whats_trigger_tv"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>